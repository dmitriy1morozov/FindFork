<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmitriymorozov.knifeandfork.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinput_main_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_main_current_location"
        android:hint="Type in your address or Zip code"
        >

    <EditText
        android:id="@+id/text_main_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/btn_main_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@id/textinput_main_location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textinput_main_location"
        app:layout_constraintBottom_toBottomOf="@id/textinput_main_location"
        android:backgroundTint="@android:color/black"
        android:background="@android:drawable/ic_menu_mylocation"
        />

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.dmitriymorozov.knifeandfork.MainActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_main_googleMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        map:layout_constraintTop_toBottomOf="@id/textinput_main_location"
        map:cameraZoom="13"
        map:mapType="normal"
        map:uiCompass="true"
        map:uiRotateGestures="true"
        map:uiScrollGestures="true"
        map:uiTiltGestures="true"
        map:uiZoomControls="true"
        map:uiZoomGestures="true"
        />

</android.support.constraint.ConstraintLayout>
