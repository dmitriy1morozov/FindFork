<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		>

		<TextView
				android:id="@+id/text_item_id"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				android:visibility="gone"
				tools:text="ID"
				/>

		<TextView
				android:id="@+id/text_item_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toLeftOf="parent"
				tools:text="NAME"
				/>

		<TextView
				android:id="@+id/text_item_distance"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintRight_toLeftOf="@id/text_item_units"
				android:text="distance"
				/>

		<TextView
				android:id="@+id/text_item_units"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				app:layout_constraintTop_toTopOf="@id/text_item_distance"
				app:layout_constraintBottom_toBottomOf="@id/text_item_distance"
				app:layout_constraintRight_toRightOf="parent"
				android:text="m"
				/>

</android.support.constraint.ConstraintLayout>